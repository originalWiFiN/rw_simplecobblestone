  <RecipeDef>
		<defName>Make_BlocksVitrifiedStoneFromCobble</defName>
		<label>make vitrified stone blocks from cobblestone</label>
		<description>Smelt cobblestone into vitrified stone blocks.</description>
		<effectWorking>CutStone</effectWorking>
        <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<workAmount>600</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<recipeUsers>
          <li>ElectricSmelter</li>
        </recipeUsers>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Cobblestone</li>
					</categories>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<products>
			<BlocksVitrifiedStone>10</BlocksVitrifiedStone>
		</products>
	</RecipeDef>
	
	<RecipeDef>
		<defName>Make_BlocksVitrifiedStoneFromBlocks</defName>
		<label>make vitrified stone blocks from stone blocks</label>
		<description>Smelt assorted stone blocks into vitrified stone blocks.</description>
		<effectWorking>CutStone</effectWorking>
        <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<workAmount>600</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<recipeUsers>
          <li>ElectricSmelter</li>
        </recipeUsers>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
				  <categories>
					<li>StoneBlocks</li>
				  </categories>
				  <disallowedThingDefs>
					<li>BlocksVitrifiedStone</li>
				  </disallowedThingDefs>
        	    </filter>
				<count>20</count>
			</li>
		</ingredients>
		<products>
			<BlocksVitrifiedStone>20</BlocksVitrifiedStone>
		</products>
	</RecipeDef>
