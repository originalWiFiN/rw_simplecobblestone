<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Granite -->
  <RecipeDef>
    <defName>MakeCobblestoneGranite</defName>
    <label>make granite cobblestone</label>
    <description>Chip granite chunks into rough cobblestones.</description>
    <jobString>Chipping granite cobblestones...</jobString>
    <workAmount>800</workAmount>
    <workSkill>Crafting</workSkill>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
    <recipeUsers>
      <li>CraftingSpot</li>
      <li>TableStonecutter</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ChunkGranite</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
        <CobblestoneGranite>4</CobblestoneGranite>
    </products>
  </RecipeDef>
